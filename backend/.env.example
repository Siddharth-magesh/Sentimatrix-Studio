# ===========================================
# Sentimatrix Studio Backend Configuration
# ===========================================
# Copy this file to .env and fill in your values
# For production, use .env.production

# Application
APP_NAME=Sentimatrix Studio
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production-min-32-chars

# Server
HOST=0.0.0.0
PORT=8000

# ===========================================
# Database
# ===========================================

# MongoDB
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=sentimatrix_studio

# Redis (for caching and job queue)
REDIS_URL=redis://localhost:6379/0

# ===========================================
# Security
# ===========================================

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# API Key Encryption
ENCRYPTION_KEY=your-64-char-hex-key-for-encrypting-api-keys

# CORS (comma-separated for production)
CORS_ORIGINS=["http://localhost:3000"]

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60
AUTH_RATE_LIMIT_REQUESTS=5
AUTH_RATE_LIMIT_WINDOW_SECONDS=60

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=INFO
LOG_FORMAT=console

# ===========================================
# LLM Providers (Optional - users configure via UI)
# ===========================================
# Default provider for new projects
SENTIMATRIX_DEFAULT_LLM_PROVIDER=groq
SENTIMATRIX_DEFAULT_LLM_MODEL=llama-3.3-70b-versatile

# System-level API keys (optional)
# GROQ_API_KEY=
# OPENAI_API_KEY=
# ANTHROPIC_API_KEY=

# ===========================================
# Background Jobs
# ===========================================
JOB_QUEUE_MAX_SIZE=100
JOB_WORKER_COUNT=4
SCHEDULER_CHECK_INTERVAL_SECONDS=60

# ===========================================
# Webhooks
# ===========================================
WEBHOOK_TIMEOUT_SECONDS=30
WEBHOOK_MAX_RETRIES=3
WEBHOOK_RETRY_DELAY_SECONDS=60

# ===========================================
# External Services (Optional)
# ===========================================

# Error Tracking
# SENTRY_DSN=

# OAuth2 Providers
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=
